<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Finance_Block_Reason_Validation</fullName>
    <active>true</active>
    <errorConditionFormula>AND( Blocked_By_Finance_Manual__c  ,  ISBLANK( Blocking_Reason_Manual__c ))</errorConditionFormula>
